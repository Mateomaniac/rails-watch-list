<!-- Banner -->
<section class="hero position-relative text-center text-white"">
</section>

<!-- movies cards -->
<div class="container">
<h1 class="my-4"><%= @list.name %></h1>
  <div class="row g-2">
    <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-4">
        <div class="card">
          <%= image_tag movie.poster_url, alt: "placeholder", class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="card-text"><small class="text-muted"><%= bookmark.comment %></small></p>
            <p>
            <%= link_to 'Remove from list', list_bookmark_path(@list, bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            class: "btn btn-dark btn-lg w-100"%>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center my-4">
    <div class="col-3 text-center"><%= link_to "Back", lists_path, class: "btn btn-secondary btn-lg w-100"%></div>
    <div class="col-3 text-center"><%= link_to 'Add movie', new_list_bookmark_path(@list), class: "btn btn-dark btn-lg w-100"%></div>
  </div>
</div>

<br><br><br>
