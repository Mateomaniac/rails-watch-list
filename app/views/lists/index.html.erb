<!-- Banner -->
<section class="hero position-relative text-center text-white"">
</section>

<!-- Cards -->
<div class="container">
<h1 class="my-4">My movies lists</h1>
  <div class="row g-2">
    <%  @lists.each do |list|%>
    <div class="col-4">
      <div class="card">
        <%= image_tag "placeholder.png", alt: "placeholder", class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-text"><%= link_to list.name, list_path(list) %></h5>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row justify-content-center my-4">
    <div class="col-3 text-center"><%= link_to 'New list', new_list_path, class: "btn btn-dark btn-lg"%></div>
  </div>
</div>
