<div class="container">
  <h1 class="my-4 text-center">Create a movie list</h1>
  <div class="row justify-content-center">
    <div class="bg-light w-50 pt-4 px-4">

      <%= simple_form_for @list do |f| %>
        <%= f.input :name,
        label_html: { class: "d-block text-center" },
        input_html: { class: "form-control w-50 d-block mx-auto" } %>
        <div class="text-center py-4"><%= f.button :submit, class: "btn btn-dark btn-lg" %></div>
      <% end %>

    </div>
  </div>
</div>
