<div class="container">
  <h1 class="my-4 text-center">Choose a movie</h1>
  <div class="row justify-content-center">
    <div class="bg-light w-50 pt-4 px-4">

      <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie,
                        prompt: "Select a movie",
                        input_html: {data: {controller: "tom-select"}} %>
      <%= f.input :comment,
                  label_html: { class: "d-block text-center" },
                  input_html: { class: "form-control w-100 d-block mx-auto" } %>
      <div class="text-center py-4"><%= f.button :submit, class: "btn btn-dark btn-lg" %></div>
      <% end %>

    </div>
  </div>
</div>
